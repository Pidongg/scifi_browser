{
    "manifest_version": 3,
    "name": "Article Summarizer - Gemini",
    "version": "1.0",
    "description": "Writes a brief summary under the article title. This helps readers quickly gauge relevance and decide whether to continue reading.",    
    "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/readability.js","scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
"permissions": ["activeTab", "scripting"]
  }
